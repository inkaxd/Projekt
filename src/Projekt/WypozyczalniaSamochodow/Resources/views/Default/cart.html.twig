{% extends "ProjektWypozyczalniaSamochodow:Default:layout.html.twig" %}

{% block title %}Koszyk {% endblock %}

{% block way %}

<div class="row">
<div class="col-md-4">
{% for flashMessage in app.session.flashbag.get('notice') %}
      {{ flashMessage | raw}}
{% endfor %}
</div>
</div>
<!-- MAIN CONTENT -->
<div class="pg-opt">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>
          Koszyk
        </h2>
      </div>
      <div class="col-md-6">
      </div>
    </div>
  </div>
</div>

{% endblock %}

{% block content %}

<section class="slice bg-white bb">
        <div class="wp-section shop">
            <div class="container">
                <div class="row">
                    <div class="col-md-11">				
                        <!-- Cart table -->
                        <table class="table table-cart table-responsive">
						
						<thead>
							<tr>                               
                                    <th>Nazwa</td>
									<th>Termin odbioru</th>
									<th>Termin zwrotu</th>
									<th>Ubezpieczenie</th>
									<th>Odbiór samochodu z innego miesjca</th>
									<th>Ilość kierowców</th>
									<th>Cena</th> 									
                                </tr>
						</thead>						
                            <tbody>
		
							 {% for c in cart %}   
                                <tr>                               
                                    <td>{{ c.name }}</td>
									<td>{{ c.param1 }}</td>
									<td>{{ c.param2 }}</td>
									<td>{{ c.param3 }}</td>
									<td>{{ c.param4 }}</td>
									<td>{{ c.param5 }}</td>
									<td>{{ c.price }} PLN</td> 									
                                </tr>
								
							 {% endfor %}
                            </tbody>
                        </table>

						{% if cart is not empty %}	
						<p>Do zapłaty: {{ hajs }}</p>
                       <p><a href="{{ path('pay_homepage') }}" class="btn btn-success">Zapłać</a></p>
						{% endif %}	
						
                    </div>			
                </div>
            </div>
        </div>
    </section>




{% endblock %}