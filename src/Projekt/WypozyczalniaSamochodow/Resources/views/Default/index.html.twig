                                <h2 class="title"><a href="{{ path('car_homepage', {'id': n.id}) }}">{{ n.name }}</a></h2>
								
                                <h4 class="subtitle">{{n.description[0:60]}}...</h4>
                            </div>                            
                        </div>
					
                    </div>
				
				{% endfor %}
      </div>
        </div>
    </section>
	
	
