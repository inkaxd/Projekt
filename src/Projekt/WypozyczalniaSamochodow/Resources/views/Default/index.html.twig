{% extends "ProjektWypozyczalniaSamochodow:Default:layout.html.twig" %}


{% block title %}Projekt{% endblock %}


{% block content %}

{% if is_granted("ROLE") %}
    Hi {{ app.user.username }}
{% endif %}

 <section class="slice bg-white">
        <div class="wp-section">
            <div class="container">
				<div class="row">
					<div class="col-md-6">
						<h2>Strona główna</h2>
					</div>
						<div class="col-md-6">
							<div class="sort-list-btn hidden-xs">                 
								<a href="{{ path('allCars_homepage') }}" class="btn btn-white filter">Wszystkie</a>
								<a href="{{ path('genre_homepage', {'genre': 'Osobowe'}) }}" class="btn btn-white filter">Osobowe</a>
								<a href="{{ path('genre_homepage', {'genre': 'Dostawcze'}) }}" class="btn btn-white filter">Dostawcze</a>
							</div>
						</div>
			</div>

				<div class="section-title-wr">
                    <h3 class="section-title left"><span>Nowości</span></h3>
					</div>
					{% for n in news |slice(0, 3) %}   
								
                    <div class="col-md-3">
					
					
						
                        <div class="wp-block white">
                            <div class="figure">
                                <a href="{{ path('car_homepage', {'id': n.id}) }}">
								
                                    <img alt="{{ n.name }}" src="{{ n.image }}"  width="290px" height="280px" class="img-center">
                                </a>
                            </div>
                            <div class="wp-block-body">
                                <h2 class="title"><a href="{{ path('car_homepage', {'id': n.id}) }}">{{ n.name }}</a></h2>
								
                                <h4 class="subtitle">{{n.description[0:60]}}...</h4>
                            </div>   

							
                        </div>
					
                    </div>
		
				{% endfor %}
      </div>
        </div>
    </section>
	
