{% extends "ProjektWypozyczalniaSamochodow:Default:layout.html.twig" %}

{% block title %}Potwierdzenie rejestracji{% endblock %}


{% block way %}

    <p><h1>{{ 'Rejestracja przebiegła pomyślnie.'|trans({'%username%': user.username}, 'FOSUserBundle') }}</h1></p>
    {% if app.session is not empty %}
        {% set targetUrl = app.session.get('_security.target_path') %}
        {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans({}, 'FOSUserBundle') }}</a></p>{% endif %}
    {% endif %}

{% endblock %}