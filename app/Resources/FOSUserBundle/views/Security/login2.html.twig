{% extends "ProjektWypozyczalniaSamochodow:Default:layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}

 <div class="pg-opt"> 
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2>Sign in</h2>
                </div>
                <div class="col-md-6">
                    <ol class="breadcrumb">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Pages</a></li>
                        <li class="active">Sign in</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>







{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<section class="slice bg-white">
    <div class="wp-section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                    <div class="wp-block default user-form">
                        <div class="form-header">
                            <h2>Sign in to your account</h2>
                        </div>


 <div class="form-body">
 
<form action="{{ path("fos_user_security_check") }}" method="post" id="frmLogin" class="sky-form">
 <fieldset>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

	<section>
		<div class="form-group">
    <label class="label" for="username_email">{{ 'Email'|trans }}</label>
	<label class="input">
	<i class="icon-append fa fa-user"></i>
	
    <input type="email" id="username_email" name="_username_email" required="required" />

	</label>
		</div>
	<section>
	
	
	
	<section>
        <div class="form-group">
		
    <label class="label" for="password">{{ 'Password'|trans }}</label>
	 <label class="input">
        <i class="icon-append fa fa-lock"></i>
    <input type="password" id="password" name="_password" required="required" />
	</label>
		</div>
	</section>

	
	<section>
        <div class="row">
            <div class="col-md-12">
			<label class="checkbox">		
				
				<input type="checkbox" id="remember_me" name="_remember_me" value="on" checked><i></i>{{ 'Keep me logged in'|trans }}</label>
               
				<label class="checkbox">
				
				
				
			</label>
	        </div>
        </div>
    </section>
	
	
	<section>
    
	 <input class="btn btn-base btn-icon btn-icon-right btn-sign-in pull-right" type="submit" id="_submit" name="_submit" value="{{ 'Next Step'|trans }}" />
	 
    </section>
	
 </fieldset>
</form>

</div>
<div class="form-footer">
                            <p>Lost your password? <a href="#">Click here to recover.</a>
                            </p>
                        </div>
                   </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}